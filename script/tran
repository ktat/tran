#!/usr/bin/perl

use strict;
use FindBin;
use lib "$FindBin::Bin/../lib";
use Tran;
use Tran::Cmd;

my $tran = Tran->new("$ENV{HOME}/.tran/config.yml");
Tran::Cmd->new($tran)->run;

=pod

=head1 NAME

tran -- version control prgoram for translation

=head1 USAGE

see help.

 % tran help

